<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mqt.dripirrigationsystem">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".activity.LoadingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.home" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"/>
        <activity
            android:name=".activity.NodeActivity"
            />
        <activity
            android:name=".activity.NodeDetailActivity">

        </activity>
        <activity
            android:name=".activity.PortraitActivity"/>
        <activity android:name=".activity.HelpActivity"/>
        <activity android:name=".activity.SettingActivity"/>
        <activity android:name=".activity.WeatherActivity"/>
        <activity android:name=".activity.ClockActivity"/>
        <activity android:name=".activity.AddClockActivity"/>

    </application>

</manifest>