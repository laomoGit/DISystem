<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">



	<LinearLayout

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingTop="6dp"
            android:text="阀门信息："
            android:textSize="20sp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="12dp"
					android:paddingLeft="16dp"
					android:text="工作模式："
					android:textSize="18sp"/>

				<TextView
					android:id="@+id/use_pattern_variate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="null"
					android:textSize="18sp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="8dp"
					android:paddingLeft="16dp"
					android:text="水压值："
					android:textSize="18sp"/>

				<Button
					android:id="@+id/pressure_variate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="14sp"/>

			</LinearLayout>

		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="6dp"
			android:paddingLeft="8dp"
			android:text="土壤信息："
			android:textSize="20sp"/>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="6dp"
				android:paddingLeft="8dp"
				android:text="土壤温度："
				android:textSize="18sp"/>

			<TextView
				android:id="@+id/soil_temperature_variate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="null"
				android:textSize="18sp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="/"
				android:textSize="18sp"/>

			<TextView
				android:id="@+id/soil_temperature_variate2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="null"
				android:textSize="18sp"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout

				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:text="土壤湿度："
					android:textSize="18sp"/>

				<TextView
					android:id="@+id/soil_humidity_variate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="null"
					android:textSize="18sp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="/"
					android:textSize="18sp"/>

				<TextView
					android:id="@+id/soil_humidity_variate2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="null"
					android:textSize="18sp"/>

			</LinearLayout>

		</LinearLayout>


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="6dp"
			android:paddingLeft="8dp"
			android:paddingTop="10dp"
			android:text="历史查询："
			android:textSize="20sp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="6dp"
				android:text="开始时间："
				android:textSize="18sp"/>

			<Button
                android:id="@+id/start_time_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="2016-05-18"
                android:layout_marginLeft="20dp"
                />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="12dp"
				android:text="结束时间："
				android:textSize="18sp"/>

			<Button
                android:id="@+id/end_time_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="2016-06-01"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Spinner
				android:id="@+id/sp_type"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_margin="6dp"
				android:layout_weight="1"
                />

			<Button
				android:id="@+id/query_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="查询"/>

		</LinearLayout>

	</LinearLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<fragment
			android:id="@+id/spread_line_chart"
			android:name="com.mqt.dripirrigationsystem.linechart.LineChartFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentBottom="true"/>
	</FrameLayout>


</LinearLayout>
